{
  "name": "@modelcontextprotocol/server-neo4j",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for Neo4j graph database integration, enabling LLMs to execute graph queries, manage graph data, and traverse relationships.",
  "private": true,
  "type": "module",
  "bin": {
    "mcp-server-neo4j": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "neo4j-driver": "^5.17.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "@types/neo4j-driver": "^4.21.0"
  }
}