    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "neo4j-driver": "^5.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}