{
  "name": "@modelcontextprotocol/server-neo4j",
  "version": "0.1.0",
  "description": "MCP server for Neo4j graph database integration",
  "type": "module",
  "bin": {
    "mcp-server-neo4j": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
