{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": ".",
    "allowJs": true,
    "declaration": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "build"]
}